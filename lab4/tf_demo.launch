<launch>

  <!-- Turtlesim Node-->
  <node pkg="turtlesim" type="turtlesim_node" name="simulation"/>

  <node pkg="turtlesim" type="turtle_teleop_key" name="keyboard" output="screen"/>
  <!-- Axes -->
  <param name="scale_linear" value="1" type="double"/>
  <param name="scale_angular" value="1" type="double"/>

  <node name="turtle1_tf_broadcaster" pkg="study_pkg" type="turtle_tf_broadcaster.py" respawn="false" output="screen" >
    <param name="turtle_tf_name" type="string" value="turtle1" />
  </node>
  <node name="carrot_tf_broadcaster" pkg="study_pkg" type="carrot_tf_broadcaster.py" respawn="false" output="screen" >
    <param name="turtle_tf_name" type="string" value="turtle1" />
  </node>
  <!-- <node pkg="tf" type="static_transform_publisher" name="car_2_camera_tf" args="0.3*sin(10*rospy.Time.now()) 0 0 0 0 0 turtle1 carrot  100" />
  -->
  <node pkg="rviz" type="rviz" name="rviz" />
</launch>
