<launch>
	<arg name="model" default="waffle" doc="Тип модели робота"/>
	<arg name="gazebo_gui" default="false" doc="Запустить GUI Gazebo: true/false"/>
	<arg name="x_pos" default="-2.0" doc="Начальная позиция робота по оси X в мире Gazebo"/>
	<arg name="y_pos" default="-0.5" doc="Начальная позиция робота по оси Y в мире Gazebo"/>
	<arg name="z_pos" default="0.0" doc="Начальная позиция робота по оси Z (высота над поверхностью) в мире Gazebo"/>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world"/>
		<arg name="paused" value="false"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="headless" value="false"/>
		<arg name="debug" value="false"/>
	</include>

	<param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro"/>

	<node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description"/>
</launch>