<launch>
  <!-- Аргументы -->
  <arg name="model" default="waffle" />
  <arg name="x_pos" default="-2.0" />
  <arg name="y_pos" default="-0.5" />
  <arg name="z_pos" default="0.0" />

  <!-- Запуск Gazebo -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world" />
  </include>
  


  <!-- Добавление модели -->
  <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" 
        args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

  <!-- Управление с клавиатуры -->
  <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="turtlebot3_teleop_keyboard" output="screen" >
  	<param name="speed" value="0.5"/>
  	<param name="turn" value="1"/>
  </node>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find study_pkg)/topics/rviz/sim_initial.rviz" />
</launch>
